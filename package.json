    "@sveltejs/adapter-cloudflare-workers": "^2.5.4",
    "@sveltejs/kit": "^2.5.24",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.24.0",
    "postcss": "^8.4.41",
    "prettier": "3.3.3",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "wrangler": "^3.72.1"
